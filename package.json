{
  "name": "wanwu",
  "displayName": "Wanwu",
  "description": "万物 - Claude Code Router 命令行工具扩展",
  "version": "0.0.3",
  "publisher": "wanwu",
  "icon": "src/Wanwu.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wanwu-ai/wanwu.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ccr.start",
        "title": "Start CCR",
        "category": "CCR",
        "icon": "src/Wanwu.png"
      },
      {
        "command": "ccr.code",
        "title": "CCR Code",
        "category": "CCR"
      },
      {
        "command": "ccr.openTerminalEditorSide",
        "title": "Open Terminal in Editor Side",
        "category": "CCR",
        "icon": "src/Wanwu.png"
      },
      {
        "command": "ccr.openConfig",
        "title": "Open CCR Config",
        "category": "CCR"
      },
      {
        "command": "ccr.createCheckpoint",
        "title": "Create Checkpoint",
        "category": "CCR"
      },
      {
        "command": "ccr.restoreCheckpoint",
        "title": "Restore Checkpoint",
        "category": "CCR"
      },
      {
        "command": "ccr.newConversation",
        "title": "New Conversation",
        "category": "CCR"
      },
      {
        "command": "ccr.loadConversation",
        "title": "Load Conversation",
        "category": "CCR"
      },
      {
        "command": "ccr.exportConversation",
        "title": "Export Conversation",
        "category": "CCR"
      },
      {
        "command": "ccr.importConversation",
        "title": "Import Conversation",
        "category": "CCR"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ccr.openTerminalEditorSide",
          "when": "true",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "ccr.start",
          "when": "true"
        },
        {
          "command": "ccr.code",
          "when": "true"
        },
        {
          "command": "ccr.openTerminalEditorSide",
          "when": "true"
        },
        {
          "command": "ccr.openConfig",
          "when": "true"
        },
        {
          "command": "ccr.createCheckpoint",
          "when": "true"
        },
        {
          "command": "ccr.restoreCheckpoint",
          "when": "true"
        },
        {
          "command": "ccr.newConversation",
          "when": "true"
        },
        {
          "command": "ccr.loadConversation",
          "when": "true"
        },
        {
          "command": "ccr.exportConversation",
          "when": "true"
        },
        {
          "command": "ccr.importConversation",
          "when": "true"
        }
      ]
    },
    "terminal": {
      "profiles": [
        {
          "id": "ccr-terminal",
          "title": "CCR Terminal"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "npx vsce package",
    "publish": "npx vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  }
}
